    label_6 = Label(root, text="Dissected Stream Area")
    label_7 = Label(root, text="Raw Data Area")
    label_8 = Label(root, text="Console Area")
    label_9 = Label(root, text="Hide")
    label_10 = Label(root, text="Show")
    button1 = Button(root, text="Restore to Default")
    button2 = Button(root, text="Confirm")
    button3 = Button(root, text="Cancel")
    radio_button_Hide_2 = Radiobutton(root)
    radio_button_Hide_3 = Radiobutton(root)
    radio_button_Hide_4 = Radiobutton(root)
    radio_button_Hide_5 = Radiobutton(root)
    radio_button_Hide_6 = Radiobutton(root)
    radio_button_Hide_7 = Radiobutton(root)
    radio_button_Hide_8 = Radiobutton(root)
    radio_button_Show_2 = Radiobutton(root)
    radio_button_Show_3 = Radiobutton(root)
    radio_button_Show_4 = Radiobutton(root)
    radio_button_Show_5 = Radiobutton(root)
    radio_button_Show_6 = Radiobutton(root)
    radio_button_Show_7 = Radiobutton(root)
    radio_button_Show_8 = Radiobutton(root)
    label_1.grid(row=0, columnspan=3)
    label_9.grid(row =1, column= 1)
    label_10.grid(row=1, column= 2)
    label_2.grid(row=2)
    label_3.grid(row=3)
    label_4.grid(row=4)
    label_5.grid(row=5)
    label_6.grid(row=6)
    label_7.grid(row=7)
    label_8.grid(row=8)
    radio_button_Hide_2.grid(row=2, column= 1)
    radio_button_Hide_3.grid(row=3, column=1)
    radio_button_Hide_4.grid(row=4, column=1)
    radio_button_Hide_5.grid(row=5, column=1)
    radio_button_Hide_6.grid(row=6, column=1)
    radio_button_Hide_7.grid(row=7, column=1)
    radio_button_Hide_8.grid(row=8, column=1)
    radio_button_Show_2.grid(row=2, column=2)
    radio_button_Show_3.grid(row=3, column=2)
    radio_button_Show_4.grid(row=4, column=2)
    radio_button_Show_5.grid(row=5, column=2)
    radio_button_Show_6.grid(row=6, column=2)
    radio_button_Show_7.grid(row=7, column=2)
    radio_button_Show_8.grid(row=8, column=2)
    button1.grid(row=9, column=1)
    button2.grid(row=9, column=2)
    button3.grid(row=9, column=3)

def PCAP(root):
    label_1 = Label(root, text="Open a PCAP file")
    label_2 = Label(root, text="PCAP Name")
    button1 = Button(root, text="Browse")
    button2 = Button(root, text="Open")
    button3 = Button(root, text="Cancel")
    entry_1 = Entry(root)

    label_1.grid(row=0, columnspan= 3)
    label_2.grid(row=1)
    entry_1.grid(row=1, column=1)
    button1.grid(row=1, column=2)
    button2.grid(row=2, column= 1)
    button3.grid(row=2, column= 2)
    
main()
